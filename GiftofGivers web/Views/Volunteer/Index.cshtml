@model List<GiftofGivers_web.Models.Volunteer>

<h2>Manage Volunteers</h2>

<form asp-action="Index" method="post">
    <input type="hidden" name="Id" />
    <input name="Name" placeholder="Name" />
    <input name="Email" placeholder="Email" />
    <input name="Phone" placeholder="Phone" />
    <input name="TaskAssigned" placeholder="Task Assigned" />
    <button type="submit">Save</button>
</form>

<table border="1" style="margin-top:20px;">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Task Assigned</th>
        <th>Actions</th>
    </tr>
    @foreach (var v in Model)
    {
        <tr>
            <td>@v.Name</td>
            <td>@v.Email</td>
            <td>@v.Phone</td>
            <td>@v.TaskAssigned</td>
            <td>
                <form asp-action="Index" method="post" style="display:inline">
                    <input type="hidden" name="Id" value="@v.Id" />
                    <input name="Name" value="@v.Name" />
                    <input name="Email" value="@v.Email" />
                    <input name="Phone" value="@v.Phone" />
                    <input name="TaskAssigned" value="@v.TaskAssigned" />
                    <button type="submit">Edit</button>
                </form>
                <form asp-action="Delete" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@v.Id" />
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
