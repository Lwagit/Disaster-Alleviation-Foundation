@model List<GiftofGivers_web.Models.Volunteer>
@{
    ViewData["Title"] = "Volunteers";
}

<h2>Volunteers</h2>

<form asp-action="Register" method="post" class="mb-4">
    <input type="hidden" id="volunteerId" name="Id" value="0" />
    <input id="name" class="form-control mb-2" placeholder="Name" name="Name" />
    <input id="email" class="form-control mb-2" placeholder="Email" name="Email" />
    <input id="phone" class="form-control mb-2" placeholder="Phone" name="Phone" />
    <input id="taskAssigned" class="form-control mb-2" placeholder="Task Assigned" name="TaskAssigned" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Task Assigned</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.TaskAssigned</td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" onclick="editVolunteer(@item.Id, '@item.Name', '@item.Email', '@item.Phone', '@item.TaskAssigned')">Edit</button>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function editVolunteer(id, name, email, phone, taskAssigned) {
            document.getElementById('volunteerId').value = id;
            document.getElementById('name').value = name;
            document.getElementById('email').value = email;
            document.getElementById('phone').value = phone;
            document.getElementById('taskAssigned').value = taskAssigned;
        }
    </script>
}
