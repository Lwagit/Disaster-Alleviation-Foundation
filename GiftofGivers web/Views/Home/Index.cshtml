@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Disaster Alleviation Foundation</h1>
        <p class="lead text-muted">
            Together we respond, recover, and rebuild communities in times of crisis.
        </p>
    </div>

    <!-- Hero Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h2 class="fw-bold">Our Mission</h2>
            <p class="text-muted">
                The Disaster Alleviation Foundation is dedicated to providing immediate relief and long-term 
                support for individuals and communities affected by disasters. From emergency aid to rebuilding 
                efforts, we stand with those in need.
            </p>
            
        </div>
        <div class="col-md-6 text-center">
            <img src="https://img.freepik.com/free-vector/charity-donation-concept_23-2148512919.jpg" 
                 alt="Helping hands" class="img-fluid rounded shadow" />
        </div>
    </div>

    <!-- Features Section -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Emergency Response</h5>
                    <p class="card-text text-muted">
                        Delivering urgent supplies and shelter to disaster-affected communities.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Community Support</h5>
                    <p class="card-text text-muted">
                        Helping families rebuild their lives with food, healthcare, and education support.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Volunteer Programs</h5>
                    <p class="card-text text-muted">
                        Empowering individuals to make a difference through volunteering opportunities.
                    </p>
                </div>
            </div>
        </div>
    </div>

    
</div>
