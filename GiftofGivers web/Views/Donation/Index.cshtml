@model List<GiftofGivers_web.Models.Donation>

<h2>Manage Donations</h2>

<form asp-action="Index" method="post">
    <input type="hidden" name="Id" />
    <input name="ResourceType" placeholder="Resource Type" />
    <input name="Quantity" type="number" placeholder="Quantity" />
    <input name="DonorName" placeholder="Donor Name" />
    <input name="DonorContact" placeholder="Donor Contact" />
    <button type="submit">Save</button>
</form>

<table border="1" style="margin-top:20px;">
    <tr>
        <th>Resource Type</th>
        <th>Quantity</th>
        <th>Donor Name</th>
        <th>Donor Contact</th>
        <th>Actions</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.ResourceType</td>
            <td>@d.Quantity</td>
            <td>@d.DonorName</td>
            <td>@d.DonorContact</td>
            <td>
                <form asp-action="Index" method="post" style="display:inline">
                    <input type="hidden" name="Id" value="@d.Id" />
                    <input name="ResourceType" value="@d.ResourceType" />
                    <input name="Quantity" value="@d.Quantity" />
                    <input name="DonorName" value="@d.DonorName" />
                    <input name="DonorContact" value="@d.DonorContact" />
                    <button type="submit">Edit</button>
                </form>
                <form asp-action="Delete" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@d.Id" />
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
