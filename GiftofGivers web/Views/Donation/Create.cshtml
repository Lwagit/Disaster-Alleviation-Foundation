@model List<GiftofGivers_web.Models.Donation>
@{
    ViewData["Title"] = "Donations";
}

<h2>Donations</h2>

<form asp-action="Create" method="post" class="mb-4">
    <input type="hidden" id="donationId" name="Id" value="0" />
    <input id="resourceType" class="form-control mb-2" placeholder="Resource Type" name="ResourceType" />
    <input id="quantity" class="form-control mb-2" placeholder="Quantity" name="Quantity" />
    <input id="donorName" class="form-control mb-2" placeholder="Donor Name" name="DonorName" />
    <input id="donorContact" class="form-control mb-2" placeholder="Donor Contact" name="DonorContact" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resource Type</th>
            <th>Quantity</th>
            <th>Donor Name</th>
            <th>Donor Contact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ResourceType</td>
                <td>@item.Quantity</td>
                <td>@item.DonorName</td>
                <td>@item.DonorContact</td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" onclick="editDonation(@item.Id, '@item.ResourceType', '@item.Quantity', '@item.DonorName', '@item.DonorContact')">Edit</button>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function editDonation(id, resourceType, quantity, donorName, donorContact) {
            document.getElementById('donationId').value = id;
            document.getElementById('resourceType').value = resourceType;
            document.getElementById('quantity').value = quantity;
            document.getElementById('donorName').value = donorName;
            document.getElementById('donorContact').value = donorContact;
        }
    </script>
}
